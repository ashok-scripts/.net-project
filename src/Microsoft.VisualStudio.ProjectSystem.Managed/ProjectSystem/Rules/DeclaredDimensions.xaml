<Rule Name="DeclaredDimensions"
      PageTemplate="generic"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
  <Rule.DataSource>
    <DataSource Label="Configuration"
                Persistence="ProjectFile"
                SourceOfDefaultValue="AfterContext" />
  </Rule.DataSource>

  <StringProperty Name="Configuration"
                  Visible="false"
                  ReadOnly="true" />
  
  <StringListProperty Name="Configurations"
                      Visible="false"
                      RendererValueSeparator=";" />

  <StringProperty Name="Platform"
                  Visible="false"
                  ReadOnly="true" />

  <StringListProperty Name="Platforms"
                      Visible="false"
                      RendererValueSeparator=";" />
  
  <StringProperty Name="TargetFramework"
                  Visible="false"
                  ReadOnly="true" />

  <StringListProperty Name="TargetFrameworks"
                      Visible="false"
                      RendererValueSeparator=";" />

</Rule>
