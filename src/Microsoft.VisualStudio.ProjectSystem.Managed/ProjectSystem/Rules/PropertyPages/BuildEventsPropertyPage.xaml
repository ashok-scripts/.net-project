<Rule Name="BuildEventsPropertyPage"
      Description="General"
      DisplayName="Build Events"
      PageTemplate="generic"
      xmlns="http://schemas.microsoft.com/build/2009/properties">

  <Rule.DataSource>
    <DataSource Persistence="ProjectFile"
                    SourceOfDefaultValue="AfterContext"
                    HasConfigurationCondition="False" />
  </Rule.DataSource>

  <StringProperty Name="PreBuild"
                    DisplayName="Pre-build event command line"/>

  <StringProperty Name="PostBuild"
                    DisplayName="Post-build event command line" />

  <EnumProperty Name="RunPostBuildEvent"
                  DisplayName="Run the post-build event">
    <EnumValue Name="Always"
                   DisplayName="Always" />
    <EnumValue Name="OnBuildSuccess"
                   DisplayName="On successful build" />
    <EnumValue Name="OnOutputUpdated"
                   DisplayName="When the build updates the project output" />
  </EnumProperty>
</Rule>